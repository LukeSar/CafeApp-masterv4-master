<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Breakfast Menu"
        android:layout_marginTop="21dp"
        android:id="@+id/MenuSign"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Tap to add item (Edit order at checkout)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HintView"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/MenuSign"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/FoodView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/HintView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ToastButton"
        android:layout_below="@+id/PoachedEggButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/PoachedEggButton"
        android:layout_alignEnd="@+id/PoachedEggButton" />

    <TextView
        android:text="Drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/DrinksView"
        android:layout_below="@+id/ToastButton"
        android:layout_alignLeft="@+id/FoodView"
        android:layout_alignStart="@+id/FoodView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BaconButton"
        android:elevation="6dp"
        android:text="Bacon Sandwhich    "
        android:layout_below="@+id/FoodView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ScrambledEggButton"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignEnd="@+id/BaconButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/BaconButton"
        android:layout_below="@+id/BaconButton"
        android:text="Scrambled egg on toast  " />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PoachedEggButton"
        android:text="Poached Egg"
        android:layout_below="@+id/ScrambledEggButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ScrambledEggButton"
        android:layout_alignEnd="@+id/ScrambledEggButton" />

    <Button
        android:id="@+id/CapuccinoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ToastButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ToastButton"
        android:layout_below="@+id/DrinksView"
        android:text="Cappuccino" />

    <Button
        android:text="Tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TeaButton"
        android:layout_below="@+id/CapuccinoButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/CapuccinoButton"
        android:layout_alignEnd="@+id/CapuccinoButton" />

    <TextView
        android:text="£3.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BaconButton"
        android:layout_alignRight="@+id/HintView"
        android:layout_alignEnd="@+id/HintView"
        android:id="@+id/BaconPriceView"
        android:layout_above="@+id/ScrambledEggButton" />

    <TextView
        android:id="@+id/ScrambledPriceView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/PoachedEggButton"
        android:layout_alignEnd="@+id/BaconPriceView"
        android:layout_alignRight="@+id/BaconPriceView"
        android:layout_below="@+id/BaconPriceView"
        android:text="£3.00" />

    <TextView
        android:text="£3.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ScrambledPriceView"
        android:layout_alignRight="@+id/ScrambledPriceView"
        android:layout_alignEnd="@+id/ScrambledPriceView"
        android:id="@+id/PoachedPriceView"
        android:layout_above="@+id/ToastButton" />

    <TextView
        android:text="£3.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PoachedPriceView"
        android:layout_alignRight="@+id/PoachedPriceView"
        android:layout_alignEnd="@+id/PoachedPriceView"
        android:id="@+id/ToastPriceView"
        android:layout_alignBottom="@+id/ToastButton" />

    <TextView
        android:text="£1.40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CapuccinoButton"
        android:layout_alignRight="@+id/ToastPriceView"
        android:layout_alignEnd="@+id/ToastPriceView"
        android:id="@+id/CappuccinoPriceView"
        android:layout_above="@+id/TeaButton" />

    <TextView
        android:id="@+id/TeaPriceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TeaButton"
        android:layout_alignLeft="@+id/CappuccinoPriceView"
        android:layout_alignStart="@+id/CappuccinoPriceView"
        android:layout_below="@+id/CappuccinoPriceView"
        android:text="£1.00" />

    <ImageButton
        android:id="@+id/BackButton"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_above="@+id/HintView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:srcCompat="?android:attr/homeAsUpIndicator" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignTop="@+id/BaconPriceView"
        android:backgroundTint="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_below="@+id/BaconPriceView"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_below="@+id/ScrambledPriceView"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/PoachedPriceView"
        android:layout_toEndOf="@+id/MenuSign"
        android:layout_toRightOf="@+id/MenuSign"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_alignTop="@+id/CappuccinoPriceView"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5"
        android:layout_below="@+id/CappuccinoPriceView"
        android:background="@android:color/transparent"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

</RelativeLayout>