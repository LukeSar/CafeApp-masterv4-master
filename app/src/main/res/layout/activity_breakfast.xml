<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Breakfast Menu"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Tap to add item (Edit order at checkout)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/textView"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <Button
        android:text="Toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ToastButton"
        android:layout_below="@+id/PoachedEggButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/PoachedEggButton"
        android:layout_alignEnd="@+id/PoachedEggButton" />

    <TextView
        android:text="Drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/ToastButton"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BaconButton"
        android:elevation="6dp"
        android:text="Bacon Sandwhich    "
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Scrambled egg on toast  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ScrambledEggButton"
        android:layout_below="@+id/BaconButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/BaconButton"
        android:layout_alignEnd="@+id/BaconButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PoachedEggButton"
        android:text="Poached Egg"
        android:layout_below="@+id/ScrambledEggButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ScrambledEggButton"
        android:layout_alignEnd="@+id/ScrambledEggButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CapuccinoButton"
        android:text="Capuccino"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/ToastButton"
        android:layout_alignEnd="@+id/ToastButton" />

    <Button
        android:text="Tea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TeaButton"
        android:layout_below="@+id/CapuccinoButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/CapuccinoButton"
        android:layout_alignEnd="@+id/CapuccinoButton" />

    <TextView
        android:text="£3.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/BaconButton"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:id="@+id/textView6"
        android:layout_above="@+id/ScrambledEggButton" />

    <TextView
        android:text="£3.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:id="@+id/textView9"
        android:layout_above="@+id/PoachedEggButton" />

    <TextView
        android:text="£3.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:id="@+id/textView10"
        android:layout_above="@+id/ToastButton" />

    <TextView
        android:text="£3.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/ToastButton" />

    <TextView
        android:text="£1.40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CapuccinoButton"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:id="@+id/textView12"
        android:layout_above="@+id/TeaButton" />

    <TextView
        android:text="£1.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignBottom="@+id/TeaButton"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/textView12" />

</RelativeLayout>